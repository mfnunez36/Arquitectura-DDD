@model Aplicacion.Core.PerfilDTO

@{
    ViewBag.Title = "Editar";
}

<section>
    <div class="container">
        <div class="row">
            <h3>EDITAR PERFIL</h3><br />
            <form class="form-horizontal col-md-12">
                <div class="form-group">
                    <label for="perfilID" class="control-label col-md-2">ID : </label>
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="txtPerfilID" value="@Html.ValueFor(model => model.perfilID)">
                    </div>
                    <input type="button" class="btn btn-default" id="btnBuscar" value="Buscar">
                </div>
                <div class="form-group">
                    <label for="nombre" class="control-label col-md-2">NOMBRE : </label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="txtNombre" value="@Html.ValueFor(model => model.nombre)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="descripcion" class="control-label col-md-2">DESCRIPCION : </label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="txtDescripcion" value="@Html.ValueFor(model => model.descripcion)">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">VIGENTE : </label>
                    <div class="col-md-4">
                        <input type="checkbox" id="chkVigente" checked="@Html.ValueFor(model => model.vigente)"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="button" class="btn btn-default" id="btnModificar" value="Modificar">
                        <input type="button" class="btn btn-default" id="btnLimpiar" value="Limpiar">
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        @Html.ActionLink("VOLVER", "Index")
    </div>
</section>

@section Scripts {
    <script src="~/Scripts/core/perfil.js"></script>
}
