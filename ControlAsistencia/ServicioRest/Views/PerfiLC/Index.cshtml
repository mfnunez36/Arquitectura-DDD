<section>
    <div class="container">
        <div class="row">
            <h3>ACCIONES RAPIDAS</h3><br />
            <form class="form-horizontal col-md-12">
                <div class="form-group">
                    <label for="perfilID" class="control-label col-md-2">ID :</label>
                    <div class="col-md-1">
                        <input type="text" class="form-control" id="txtPerfilID">
                    </div>
                    <input type="button" class="btn btn-default" id="btnBuscar" value="Buscar">
                </div>
                <div class="form-group">
                    <label for="nombre" class="control-label col-md-2">NOMBRE :</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="txtNombre">
                    </div>
                </div>
                <div class="form-group">
                    <label for="descripcion" class="control-label col-md-2">DESCRIPCION :</label>
                    <div class="col-md-4">
                        <textarea class="form-control" id="txtDescripcion"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="vigente" class="control-label col-md-2">VIGENTE :</label>
                    <div class="col-md-4">
                        <input type="checkbox" id="chkVigente" checked="" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="button" class="btn btn-default" id="btnAgregar" value="Agregar">
                        <input type="button" class="btn btn-default" id="btnModificar" value="Modificar">
                        <input type="button" class="btn btn-default" id="btnEliminar" value="Eliminar">
                        <input type="button" class="btn btn-default" id="btnLimpiar" value="Limpiar">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br /><br /><br />
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <center><h3>LISTA DE PERFILES</h3></center>
                            <table id="listaPerfil" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>NOMBRE</th>
                                        <th>DESCRIPCION</th>
                                        <th>VIGENTE</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

